<html>
    <head>
        <title>Instructor-Add</title>
        <meta charset="utf-8">
        <link href="/css/style.css" rel="stylesheet">
        <link href="/css/add.css" rel="stylesheet">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>    
    <body>
        <header>
            <a href="/" id="out">Logout</a>
            <a href="/ihome" id="logo"><h2>QC CunyFirst</h2></a>
        </header>
        <nav>
            <a href="/coursemanagement">Course Management</a>
            <a href="/html/icontactHelp.html">Contact/Help</a>
        </nav>
        <section id="main">
            <!--- The form will filledout in the edit version of the  page--->
              <form action="/add" method="POST">
                <div id="part1">
                    <h1>Course Details:</h1>
                     <% if (err[0]) { %>
                      <p class="err">You Have That Course</p>
                    <% } %>
                    <% if (err[1]) { %>
                      <p class="err">There is conflict of time</p>
                    <% } %>
                    <% if (err[2]) { %>
                      <p class="err">Please pick your Scheduled Dates</p>
                    <% } %>
                    <label for="cars">Semester:</label>
                      <select name="Semester" id="Semester">
                          <option value="Spring 2021">Spring 2021</option>
                          <option value="Summer  2021">Summer 2021</option>
                          <option value="Fall  2021">Fall 2021</option>
                       </select>
                    <br>
                    <label for="name">Course Name: </label>
                     <input type="text" id="name" name="name" required> 
                    <br>
                    <label for="name">Course Number: </label>
                     <input type="number" id="num" name="num" min="0" required>
                    <br>
                    <label for="subject">Department:</label>
                     <input type="text" id="Department" name="Department" required>
                    <br>
                    <label for="info">Course Info: </label>
                    <br>
                      <textarea id="info" name="info" cols="30" rows="5" required></textarea>
                    <br>
                    <label  for="capacity">Capacity: </label>
                      <input type="number" id="capacity" name="capacity" min="0" required>
                    <br>
                    <label>Start Time:</label>
                      <input type="time" name="start" id="start" min="07:00" max="20:00" required>
                    <br>
                    <label>End Time:</label>
                      <input type="time" name="end" id="end"  min="07:45" max="22:30"required>
                    <br>
                    <label>Deadline :</label>
                     <input type="date" name="dead" id="dead" min="2021-01-23" max="2021-09-07" required>
                    <p>Scheduled Dates:</p>
                </div>
                <div id="DOW">
                    <div class="child">
                          <input type="checkbox" id="day" name="day" value="Monday">
                        <label for="day"><span>Monday</span></label>
                    </div>
                    <div class="child">
                          <input type="checkbox" id="day" name="day" value="Tuesday">
                        <label for="day"><span>Tuesday</span></label>
                    </div>
                    <div class="child">
                          <input type="checkbox" id="day" name="day" value="Wednesday">
                        
                        <label for="day"><span>Wednesday</span></label>
                    </div>
                    <div class="child">
                          <input type="checkbox" id="day" name="day" value="Thursday">
                    
                        <label for="day"><span>Thursday</span></label>
                    </div>
                    <div class="child">
                          <input type="checkbox" id="day" name="day" value="Friday">
                        <label for="day"><span>Friday</span></label>
                   </div>
                   <div class="child">
                          <input type="checkbox" id="day" name="day" value="Saturday">
                        <label for="day"><span>Saturday</span></label>
                   </div>
                   <div class="child">
                          <input type="checkbox" id="day" name="day" value="Sunday">
                        <label for="day"><span>Sunday</span></label>
                   </div>
                </div>
                <br>
              
               <input class="button" type="submit" value="Add">
                
            </form>
            <br>
        </section>
        <footer>
            <p>&#169 Shohum Boker- 2021</p>
        </footer>
    </body>
</html>
                    