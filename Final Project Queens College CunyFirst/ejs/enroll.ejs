<!DOCTYPE html>
<html lang="en" >
    <head>
        <title>QC Enrollment-Enroll</title>
        <meta charset="utf-8">
        <meta name="description" content="Queens College Course Enrollment">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="/css/global.css">
    </head>
    <body id="enroll">
        <header id="showcase">
            <div class="content-wrap">
                <div class="horizontal-center">
                    <a href="/homepage"style="text-decoration:none;color: white"><h1>Queens College CunyFirst</h1></a>
                </div>
            </div>
        </header>
        <main id="main">
            <section id="section-g">
                <div class="TaskBar">
                    <a href="/withdraw">Withdraw Course</a>
                    <a href="/contacthelp.html">Contact</a>
                    <a href="/">Logout</a>
                </div>
            </section>
            <section id="section-a">
                <div class="content-wrap">
                    <h2 class="content-title">Filter Courses By:</h2>
                    <div class="content-text">
                        <div class="row input-container">
                            <div class="col">
                                <div class="styled-input wide">
                            <form action = "/query" method= "POST">
                                  <input type="text"   placeholder="Course Name" id="name" name="name"/>
                                </div>
                            </div>
                            <div class="col">
                                <div class="styled-input wide">
                                    <input type="text" placeholder="Department" id="dept" name="dept"/>
                                </div>
                            </div>
                        </div>
                        <div class="row input-container2">
                            <div class="col-md col-sm">
                                <div class="styled-input">
                                    <input type="text" placeholder="Instructor's Name" id="instrc" name="instrc"/>
                                </div>
                            </div>
                            <div class="col-md col-sm">
                                <div class="styled-input">
                                    <select name="Semester" id="Sem">
                                      <option value="Spring 2021">Spring 2021</option>
                                      <option value="Summer  2021">Summer 2021</option>
                                      <option value="Fall  2021">Fall 2021</option>
                                     </select>
                                </div>
                            </div>
                        </div>
                        <div class="row input-container">
                            <div class="col">
                                <div class="styled-input wide">
                                  <input type="text" placeholder="Enter day(s) of the week like 'Monday' or 'Monday, Friday'" id="DOW" name= "DOW"/>
                               </div>
                            <div class="col 12">
                               <input type="submit"class="btn-lrg submit-btn" value="Search">
                            </form> 
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section id="section-b" >
                <div class="content-wrap">
                    <h2>Results: </h2>
                </div>
                <div class="content-wrap">
                <form action="/roll" method ="POST">
                  <% for(var i = 0; i < info.length; i++) { %>
                     <div class="information notification-box">
                          <label class="containercheck">
                             <input type="radio" id="class" name="class" value= "<%= info[i]["_id"]%>">
                             <span class="checkmark"></span>
                         </label>
                         <h3><%= info[i].CourseName
                          + " " +  info[i].CourseNumber + " - " +
                          info[i].Semester%></h3>
                          <p><%= intToTime(info[i].StartTime)
                          + "-" + intToTime(info[i].EndTime)%></p>
                      </div>
                    <% } %>
                    <div class="col 12">
                        <input type="submit" id="submit"class="btn-lrg submit-btn" value="Enroll">
                    </div>
                  </form>
                
                </div>
            </section>
        </main>
        <footer id="main-footer" class="grid"></footer>
    </body>
</html>